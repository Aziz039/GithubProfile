<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clProfile">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!-- Here you put the rest of your current view-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/ic_github_icon" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginVertical="20dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="Username: " />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="Name: "/>


        <TextView
            android:id="@+id/tv_public_repos"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="Public repos: " />

        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="Followers: " />

        <TextView
            android:id="@+id/tv_following"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="Following: " />

        <TextView
            android:id="@+id/tv_created_at"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="Created at: " />

        <TextView
            android:id="@+id/tv_html_url"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="HTML URL: " />
        <TextView
            android:id="@+id/tv_avatar_url"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="Avatar URL:" />

        <Button
            android:id="@+id/bt_newSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="new search" />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>